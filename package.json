{
  "name": "unit-nest",
  "version": "1.0.0",
  "description": "Fluent, type-safe builder for unit testing NestJS services with Jest",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint lib/**/*.ts tests/**/*.ts",
    "lint:fix": "eslint lib/**/*.ts tests/**/*.ts --fix",
    "format": "prettier --write lib/**/*.ts tests/**/*.ts",
    "format:check": "prettier --check lib/**/*.ts tests/**/*.ts",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist coverage .jest-cache",
    "prepare": "npm run build",
    "prepublishOnly": "npm run clean && npm run build && npm run test:ci"
  },
  "keywords": [
    "nestjs",
    "testing",
    "jest",
    "unit-testing",
    "typescript"
  ],
  "author": "",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/romtaugranot/unit-nest.git"
  },
  "bugs": {
    "url": "https://github.com/romtaugranot/unit-nest/issues"
  },
  "homepage": "https://github.com/romtaugranot/unit-nest#readme",
  "peerDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "jest": "^30.1.3"
  },
  "devDependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/testing": "^11.1.6",
    "@types/jest": "^29.5.14",
    "@typescript-eslint/eslint-plugin": "^8.15.0",
    "@typescript-eslint/parser": "^8.15.0",
    "eslint": "^9.15.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^30.1.3",
    "jest-util": "^30.0.5",
    "prettier": "^3.3.3",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
